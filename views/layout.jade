doctype 5
html(ng-app="laweasyread", lang="zh-TW")
    head
        title= "laweasyread"
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //-  css files
        link(rel='stylesheet', href='/stylesheets/bootstrap-combined.min.css')
        link(rel='stylesheet', href='/stylesheets/main.css')
    body
        .container-fluid.main-content
            .navbar.navbar-inverse.navbar-fixed-top
                block navbar
            .row-fluid(ng-controller="TypeaheadCtrl")
                .span3#querysection
                    header
                        h1 laweasyread
                        span
                    block querybox
                .span8
                    block content

    footer
    //- js files
    script(src='/js/jquery-1.9.1.min.js', type='text/javascript')
    script(src='/js/bootstrap.min.js', type='text/javascript')
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.1.3/angular.min.js",type='text/javascript')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular-resource.min.js', type='text/javascript')
    script(src="http://angular-ui.github.com/bootstrap/ui-bootstrap-tpls-0.2.0.js",type='text/javascript')
    script(src="/js/app.js",type='text/javascript')
